<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="jpa_db">
      <class>entities.Autor</class>
      <class>entities.Libro</class>
      <class>entities.Categoria</class>

      <properties>
          <property name="jakarta.persistence.jdbc.password" value="password"/>
          <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/bibliodb"/>
          <property name="jakarta.persistence.jdbc.user" value="postegres"/>
          <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

          <property name="hibernate.format_sql" value="true"/>
          <property name="hibernate.show_sql" value="true"/>
          <property name="hibernate.hbm2ddl.auto" value="update"/>
          <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      </properties>

  </persistence-unit>
</persistence>
